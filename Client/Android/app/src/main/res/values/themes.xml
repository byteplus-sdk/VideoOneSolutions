<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.Immersion">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppDialog" parent="Theme.Material3.Light.Dialog">
        <item name="dialogCornerRadius">8dp</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen.IconBackground">
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>

    <style name="Theme.VideoOne.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="windowSplashScreenBackground">#FFFFFF</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_vo_splash</item>
        <item name="postSplashScreenTheme">@style/AppTheme.Immersion</item>
    </style>
</resources>