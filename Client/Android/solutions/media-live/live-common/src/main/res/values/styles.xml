<resources>

    <!-- Base application theme. -->
    <style name="LiveTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:spinnerStyle">@style/LiveSpinner</item>
        <item name="android:switchStyle">@style/LiveSwitch</item>
    </style>

    <style name="LiveTheme.Immersion">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="LiveSpinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:padding">1dp</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:background">@drawable/live_shape_spinner_selector</item>
        <item name="android:popupBackground">@drawable/live_shape_spinner_popup</item>
    </style>

    <style name="LiveSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumb">@drawable/live_switch_thumb_selector</item>
        <item name="android:track">@drawable/live_switch_track_selector</item>
        <item name="track">@drawable/live_switch_track_selector</item>
        <item name="android:showText">false</item>
    </style>

    <style name="LiveTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="LiveTextView.Info">
        <item name="android:shadowColor">#26000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="LiveTextView.Action">
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#33000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">12</item>
    </style>

    <style name="DialogInAndOutStyle">
        <item name="android:windowEnterAnimation">@anim/dialog_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_bottom</item>
    </style>

    <style name="LiveButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/live_text_black</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/live_shape_button</item>
    </style>

    <style name="LiveButton.Blue">
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@drawable/live_shape_button_blue</item>
    </style>

    <style name="LiveButton.BlueR">
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@drawable/live_shape_button_blue_r</item>
    </style>

    <style name="LiveButton.WhiteStroke">
        <item name="android:textColor">@color/live_bg_blue</item>
        <item name="android:background">@drawable/live_shape_button_white_stroke</item>
    </style>

    <style name="LiveButton.Settings">
        <item name="android:textColor">@color/medialive_color_live_setting_button</item>
        <item name="android:background">@drawable/live_shape_button_settings</item>
    </style>

    <style name="LiveButton.Settings.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="LiveCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="LiveCheckBox.White">
        <item name="colorAccent">#A1CAFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="buttonTint">#FFF</item>
    </style>
</resources>
