<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/tv_upload_preview_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="@string/vod_upload_preview_title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_upload_preview_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="@string/vod_upload_preview_desc"
        android:textAlignment="center"
        android:textColor="#C9CDD4"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_upload_preview_title" />

    <ImageView
        android:id="@+id/iv_upload_preview_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="78dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="220:266"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_upload_preview_desc" />

    <TextView
        android:id="@+id/tv_upload_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="78dp"
        android:background="@drawable/vod_upload_btn_bg"
        android:gravity="center"
        android:text="@string/vod_upload_media_asset"
        android:textColor="#07080A"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_upload_preview_img" />

    <TextView
        android:id="@+id/tv_upload_back_to_home"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="78dp"
        android:background="@drawable/vod_upload_back_home_btn_bg"
        android:gravity="center"
        android:text="@string/vod_upload_back_home"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_upload_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>