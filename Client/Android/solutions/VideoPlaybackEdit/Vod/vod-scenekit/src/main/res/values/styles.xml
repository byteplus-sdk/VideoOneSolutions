<resources>

    <style name="vevod_circle_image">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="vevod_pip_animation">
        <item name="android:windowEnterAnimation">@anim/vevod_anim_pip_show</item>
        <item name="android:windowExitAnimation">@anim/vevod_anim_pip_dismiss</item>
    </style>

    <style name="vevod_setting_seekbar" parent="Widget.AppCompat.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:background">@null</item>
        <item name="android:progressDrawable">@drawable/vevod_setting_progress_horizontal</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxHeight">40dp</item>
        <item name="android:thumb">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>
</resources>