<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:background="#000">

    <RelativeLayout
        android:id="@+id/likeContainer"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <ImageView
            android:id="@+id/likeIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/vevod_fullscreen_like_selector" />

        <TextView
            android:id="@+id/likeNum"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_below="@id/likeIcon"
            android:layout_alignLeft="@+id/likeIcon"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="9dp"
            android:maxLines="1"
            android:padding="0dp"
            android:text="1024"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:translationX="16dp"
            android:translationY="-14dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/commentContainer"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="14dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/commentIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/vevod_fullscreen_comment" />

        <TextView
            android:id="@+id/commentNum"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_below="@id/commentIcon"
            android:layout_alignLeft="@+id/commentIcon"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="9dp"
            android:maxLines="1"
            android:padding="0dp"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:translationX="16dp"
            android:translationY="-14dp"
            tools:text="302" />
    </RelativeLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/speedContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/vevod_time_progress_bar_layer_fullscreen_interact_speed" />

        <TextView
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            tools:text="Speed" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/qualityContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/vevod_time_progress_bar_layer_fullscreen_interact_quality" />

        <TextView
            android:id="@+id/quality"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            tools:text="1080P" />
    </LinearLayout>
</LinearLayout>
