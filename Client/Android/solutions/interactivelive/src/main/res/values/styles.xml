<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LiveInfoIndicatorStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LiveInfoInformationStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#CCCED0</item>
    </style>

    <style name="LiveBottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogModal</item>
        <item name="android:navigationBarColor">@color/live_bottom_sheet_color</item>
    </style>

    <style name="BottomSheetDialogModal" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="LiveCommonDialogTheme" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="android:windowBackground">@drawable/bg_dialog_live_common</item>
        <item name="android:windowMinWidthMinor">83%</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="circleStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundCorner4">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="roundCorner8">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>