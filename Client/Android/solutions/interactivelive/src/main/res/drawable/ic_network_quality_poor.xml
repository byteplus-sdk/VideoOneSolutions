<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:innerRadius="3dp"
            android:shape="ring"
            android:thickness="1dp"
            android:useLevel="false">
            <solid android:color="#4DF2A200" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="oval">
            <size
                android:width="5dp"
                android:height="5dp" />
            <solid android:color="#F2A200" />
        </shape>
    </item>
</layer-list>