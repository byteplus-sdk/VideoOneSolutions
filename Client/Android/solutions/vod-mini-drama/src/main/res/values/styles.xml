<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="VEVodAppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
        <item name="tabTextAppearance">@style/VEVodAppTabTextAppearance</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabRippleColor">@null</item>
    </style>

    <style name="VEVodAppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#26000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="VEVodEpisodeSelectorPagerTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabPaddingStart">20dp</item>
        <item name="tabPaddingEnd">20dp</item>
        <item name="tabTextAppearance">@style/VEVodEpisodeSelectorPagerTabTextAppearance</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabRippleColor">@null</item>
    </style>

    <style name="VEVodEpisodeSelectorPagerTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">
            @color/vevod_mini_drama_episode_selector_pager_tab_text_color
        </item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="circleStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundCorner2">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">2dp</item>
    </style>

    <style name="roundCorner4">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="roundCorner6">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="VeVodMiniDramaUnlockAllLandscapeDialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:background">@drawable/vevod_mini_drama_bg_unlock_all_landscape_dialog</item>
    </style>

    <style name="VeVodMiniDramaUnlockAllDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/VeVodMiniDramaUnlockAllDialogStyle</item>
        <item name="android:navigationBarColor">#FFF9F1</item>
    </style>

    <style name="VeVodMiniDramaUnlockAllDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/vevod_mini_drama_bg_unlock_all_dialog</item>
        <item name="behavior_draggable">false</item>
    </style>

    <style name="VeVodMiniDramaBottomSheetLight" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/VeVodMiniDramaBottomSheetLightStyle</item>
    </style>

    <style name="VeVodMiniDramaBottomSheetLightStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/vevod_mini_drama_bg_bottom_sheet_light</item>
        <item name="behavior_draggable">false</item>
    </style>

    <style name="VeVodMiniDramaBottomSheetDark" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/VeVodMiniDramaBottomSheetDarkStyle</item>
        <item name="android:navigationBarColor">#000000</item>
    </style>

    <style name="VeVodMiniDramaBottomSheetDarkStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/vevod_mini_drama_bg_bottom_sheet_dark</item>
        <item name="behavior_draggable">false</item>
    </style>

    <style name="VeVodMiniDramaProgressDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">#4D000000</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="VeVodMiniDramaFullscreenDialog" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>