<resources>

    <!-- Base application theme. -->
    <style name="VEVodAppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/vevod_color_primary</item>
        <item name="colorPrimaryDark">@color/vevod_color_primary_dark</item>
        <item name="colorAccent">@color/vevod_color_accent</item>
        <item name="android:windowBackground">@null</item>
        <item name="actionBarSize">40dp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="VEVodAppTheme.Dark">
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="VEVodAppTheme.Transparent" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>