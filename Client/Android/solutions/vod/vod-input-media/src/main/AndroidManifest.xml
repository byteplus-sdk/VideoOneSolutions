<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application>
        <activity
            android:name=".SampleSourceActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation|keyboard"
            android:exported="false"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait"
            android:theme="@style/VEVodAppTheme">
            <intent-filter>
                <action android:name="com.byteplus.vod.scenekit.action.INPUT_MEDIA_SOURCE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SampleShortVideoActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation|keyboard"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait"
            android:theme="@style/VEVodAppTheme" />

        <activity
            android:name=".SampleFeedVideoActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation|keyboard"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait"
            android:theme="@style/VEVodAppTheme" />

    </application>
</manifest>