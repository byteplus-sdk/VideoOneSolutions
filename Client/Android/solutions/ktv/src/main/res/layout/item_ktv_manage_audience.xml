<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    tools:showIn="@layout/dialog_ktv_manage_audiences">

    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#80838A"
        android:textSize="12sp"
        tools:text="1" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:padding="1dp"
        app:shapeAppearanceOverlay="@style/circleStyle"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp"
        tools:src="@drawable/avatar01" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="Drew Doe" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ktv_button_gray"
        android:paddingHorizontal="17dp"
        android:paddingVertical="4dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="@string/button_alert_reject"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/bg_ktv_song_action"
        android:paddingHorizontal="17dp"
        android:paddingVertical="4dp"
        android:textColor="@color/color_ktv_button_action"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="@string/button_alert_accept" />

</LinearLayout>