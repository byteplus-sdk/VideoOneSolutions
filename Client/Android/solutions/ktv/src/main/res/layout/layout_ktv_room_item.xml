<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/bg_ktv_host_list"
    tools:layout_marginTop="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/user_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundCorner8"
        tools:src="@drawable/avatar00" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        android:ellipsize="middle"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/user_avatar"
        app:layout_constraintTop_toTopOf="@id/user_avatar"
        tools:text="Byte's live" />

    <TextView
        android:id="@+id/ktv_live_status"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_ktv_living"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:minWidth="50dp"
        android:paddingHorizontal="6dp"
        android:text="@string/ktv_living"
        android:textColor="#FF4E75"
        android:textSize="12sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_ktv_living"
        app:layout_constraintStart_toStartOf="@id/user_name"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        tools:drawableStart="@drawable/ic_ktv_living" />

    <TextView
        android:id="@+id/ktv_audience_count"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@drawable/bg_ktv_audience_count"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:minWidth="50dp"
        android:paddingHorizontal="6dp"
        android:textColor="#0C0D0E"
        android:textSize="12sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_ktv_audience_count"
        app:layout_constraintBottom_toBottomOf="@id/ktv_live_status"
        app:layout_constraintStart_toEndOf="@id/ktv_live_status"
        app:layout_constraintTop_toTopOf="@id/ktv_live_status"
        tools:drawableStart="@drawable/ic_ktv_audience_count"
        tools:text="13.5K" />

</androidx.constraintlayout.widget.ConstraintLayout>